# --- BRAIN (AI AGENTS) ---
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Optional: Fallback to OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# --- DATABASE ---
# Defaulting to local SQLite for Mia's internal memory
DATABASE_URL=sqlite:///./mia_internal.db

# --- CONNECTORS (ECOMMERCE PLATFORMS) ---

# SHOPIFY: Create a Custom App in your Shopify Admin -> Settings -> App and sales channels -> Develop apps
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# AMAZON SP-API: Required for Amazon integration (future)
AMAZON_CLIENT_ID=your_amazon_client_id
AMAZON_CLIENT_SECRET=your_amazon_client_secret
AMAZON_REFRESH_TOKEN=your_amazon_refresh_token

# --- SERVER CONFIG ---
PORT=8000
HOST=0.0.0.0
DEBUG=True
